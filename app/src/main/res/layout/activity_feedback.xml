<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="意见反馈"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="QQ/邮箱"
            android:textColor="#333333"
            android:textSize="15.36sp"
            android:gravity="center_vertical" />

            <EditText
                android:id="@+id/feedback_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_feedback"
                android:gravity="start"
                android:hint="请留下您的联系方式，方便我们联系您。"
                android:maxLength="50"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/color_1B1B1B"
                android:textColorHint="@color/color_4E4E4E"
                android:textSize="13.33sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="问题和意见"
            android:textColor="#333333"
            android:textSize="15.36sp"
            android:gravity="center_vertical" />
        <EditText
            android:id="@+id/feedback_comment"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback"
            android:gravity="start"
            android:hint="请详细描述你的问题和意见..."
            android:maxLength="200"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/color_1B1B1B"
            android:textColorHint="@color/color_4E4E4E"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/feedback_submit"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/shape_feedback_btn"
            android:gravity="center"
            android:text="提 交"
            android:textColor="#FFFFFF"
            android:textSize="17.28sp" />
    </LinearLayout>

</LinearLayout>
