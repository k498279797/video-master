<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <LinearLayout
        android:id="@+id/class_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_bg_color"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/class_item_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_table_left"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:text="热门推荐"
                android:textSize="16dp"
                android:textColor="@color/page_text_color"/>
            <TextView
                android:id="@+id/class_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:paddingBottom="8dp"
                android:textColor="#333"
                android:gravity="bottom|center"
                android:textSize="12dp"
                android:text=""
                />
            <ImageView
                android:id="@+id/img_more_hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:gravity="right|center"
                android:src="@mipmap/more"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/index_video_rec_view"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
