<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <LinearLayout
        android:id="@+id/class_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_white"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/class_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/default_img"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/class_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"
                android:gravity="left|center"
                android:lines="1"
                android:ellipsize="end"
                android:text="年终总结PPT怎么做？"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/class_item_views"
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="left|center"
                    android:textSize="10sp"
                    android:textColor="#F14040"
                    android:text="更新14集"/>
                <TextView
                    android:id="@+id/class_item_times"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:text="时长：00:00:00"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
