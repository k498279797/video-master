<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="倒置文字"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/showResult"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="显示结果"
            android:layout_weight="1" />
        <Button
            android:id="@+id/showResult2"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="设置新闻"
            android:layout_weight="1" />
        <Button
            android:id="@+id/setAuto"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="自动滚动"
            android:layout_weight="1" />
    </LinearLayout>
    <EditText
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="15dp"
        android:background="@drawable/shape_feedback"
        android:textColor="#000"
        android:layout_gravity="start"
        android:gravity="start"
        android:textSize="14dp"
        android:hint="请输入内容"
        android:text="1989我们在学校里做自己想做的事，就是这样一个人。"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/setGoodView"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:layout_weight="1" />
    </LinearLayout>
    <com.vxiaokang.video.view.AutoScrollView
        android:id="@+id/autoScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000"
        android:rotation="180"
        android:rotationY="180"
        android:textSize="20dp"
        android:text="@string/txt_content"
        />
    </com.vxiaokang.video.view.AutoScrollView>
</LinearLayout>
