<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="教程"
            android:textSize="20sp" />
    </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="190dp">
               <xyz.doikki.videoplayer.player.VideoView
                   android:id="@+id/dk_player"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent" >
                   <ImageView
                       android:id="@+id/curr_video_img"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/banner" />
               </xyz.doikki.videoplayer.player.VideoView>
           </LinearLayout>
           <RelativeLayout
               android:id="@+id/video_detail_container"
               android:layout_width="match_parent"
               android:background="#5f000000"
               android:layout_height="190dp"
               android:layout_marginTop="-190dp"
               android:gravity="center"
               android:layout_gravity="center">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_centerHorizontal="true"
                   android:gravity="center"
                   android:layout_height="45dp">
                   <ImageView
                       android:id="@+id/ic_play_btn"
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:layout_weight="1"
                       android:gravity="left|center"
                       android:src="@mipmap/ic_play"/>
               </LinearLayout>
           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="56dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="10dp"
               android:background="@drawable/bg_white"
               android:orientation="vertical">
                <TextView
                    android:id="@+id/curr_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"/>
               <TextView
                   android:id="@+id/curr_video_views"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="12sp"
                   android:textColor="#999999"/>
           </LinearLayout>

       </LinearLayout>



</LinearLayout>
