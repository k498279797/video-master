<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="拉伸矩形"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/showResult"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="显示结果"
            android:layout_weight="1" />
        <Button
            android:id="@+id/showResult2"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="设置新闻"
            android:layout_weight="1" />
        <Button
            android:id="@+id/setAuto"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="自动滚动"
            android:layout_weight="1" />
    </LinearLayout>
    <com.vxiaokang.video.activity.tool.AudioView
        android:id="@+id/audioView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <com.vxiaokang.video.view.DragScaleView
            android:id="@+id/my_dragscale"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="120dp"
            android:clickable="true">
        </com.vxiaokang.video.view.DragScaleView>

        <com.vxiaokang.video.view.NewDragScaleView
            android:id="@+id/my_newdragscale"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            />

    </RelativeLayout>
</LinearLayout>
