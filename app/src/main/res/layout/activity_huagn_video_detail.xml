<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text=""
            android:textSize="20sp" />
    </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="190dp">
               <xyz.doikki.videoplayer.player.VideoView
                   android:id="@+id/dk_player"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent" >
                   <ImageView
                       android:id="@+id/curr_video_img"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/banner" />
               </xyz.doikki.videoplayer.player.VideoView>
           </LinearLayout>
           <RelativeLayout
               android:id="@+id/video_detail_container"
               android:layout_width="match_parent"
               android:background="#5f000000"
               android:layout_height="190dp"
               android:layout_marginTop="-190dp"
               android:gravity="center"
               android:layout_gravity="center">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_centerHorizontal="true"
                   android:gravity="center"
                   android:layout_height="45dp">
                   <ImageView
                       android:id="@+id/ic_play_btn"
                       android:layout_width="match_parent"
                       android:layout_height="45dp"
                       android:layout_weight="1"
                       android:gravity="left|center"
                       android:src="@mipmap/ic_play"/>
               </LinearLayout>
           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@drawable/bg_white"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingLeft="5dp"
                   android:paddingRight="15dp"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/curr_video_title"
                       android:layout_width="wrap_content"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:layout_height="match_parent"
                       android:singleLine="true"
                       android:ellipsize="end"
                       android:text="PPT大纲创建幻灯片"
                       android:textSize="12sp"
                       android:textColor="#333333"/>
                   <TextView
                       android:id="@+id/curr_video_views"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="bottom"
                       android:text="34122次观看"
                       android:textSize="10sp"
                       android:textColor="#999999"/>
                   <Space
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"/>
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/copyBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_gravity="right"
               android:gravity="right">
               <TextView
                   android:id="@+id/item_copy_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#ffffff"
                   android:background="@drawable/shape_red_btn_5"
                   android:layout_gravity="right"
                   android:gravity="right"
                   android:textSize="12dp"
                   android:paddingTop="5dp"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:paddingBottom="5dp"
                   android:text="复制链接"
                   />
           </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="5dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="相关视频"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:textColor="#333333"
                   android:layout_marginLeft="5dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_gravity="left"/>
           </LinearLayout>
           <com.scwang.smart.refresh.layout.SmartRefreshLayout
               android:id="@+id/refreshLayout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:srlAccentColor="#333333"
               app:srlEnablePreviewInEditMode="true">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:orientation="vertical">
                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/detail_rec_view"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
               </RelativeLayout>
           </com.scwang.smart.refresh.layout.SmartRefreshLayout>
       </LinearLayout>



</LinearLayout>
