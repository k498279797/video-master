<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.tool.SleepActivity">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="圆形放大缩小动画"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="放大时间(ms)"
                android:layout_weight="1"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="暂停时间(ms)"
                android:layout_weight="1"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="缩小时间(ms)"
                android:layout_weight="1"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback"
            android:gravity="start"
            android:hint="放大"
            android:text="4000"
            android:maxLength="50"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/color_1B1B1B"
            android:textColorHint="@color/color_4E4E4E"
            android:layout_weight="1"
            android:textSize="13.33sp" />
        <EditText
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback"
            android:gravity="start"
            android:text="6000"
            android:hint="暂停"
            android:maxLength="50"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/color_1B1B1B"
            android:textColorHint="@color/color_4E4E4E"
            android:layout_weight="1"
            android:textSize="13.33sp" />
        <EditText
            android:id="@+id/small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback"
            android:gravity="start"
            android:text="4000"
            android:hint="缩小"
            android:maxLength="50"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/color_1B1B1B"
            android:textColorHint="@color/color_4E4E4E"
            android:layout_weight="1"
            android:textSize="13.33sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/starBtn"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/shape_feedback_btn"
            android:text="运行"
            android:layout_weight="1" />
        <Button
            android:id="@+id/bigBtn"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/shape_feedback_btn"
            android:text="放大"
            android:layout_weight="1" />
        <Button
            android:id="@+id/smallBtn"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/shape_feedback_btn"
            android:text="缩小"
            android:layout_weight="1" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/huxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp">

        <!--中心圆的imageView-->
                <ImageView
                    android:id="@+id/iv_wave"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"/>

        <!--外边圆框的的imageView（可删除，没啥用）-->
                <ImageView
                  android:id="@+id/iv_wave_1"
                  android:layout_width="300dp"
                  android:layout_height="300dp"
                  android:layout_gravity="center"
                  android:background="@drawable/circle_k"/>
    </FrameLayout>
</LinearLayout>