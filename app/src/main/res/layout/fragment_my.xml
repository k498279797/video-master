<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F7F7">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="我的"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.67dp"
    android:orientation="vertical"
    android:layout_marginRight="10.67dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="113.33dp"
    android:background="@mipmap/bg_my">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="left|center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="68.77dp"
            android:layout_height="68.77dp"
            android:layout_marginLeft="32dp"
            android:src="@mipmap/default_avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="超爱看视频"
            android:textFontWeight="750"
            android:textColor="@color/color_FFFFFF"
            android:textSize="22sp"/>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_line_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/feedback"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left|center"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp"
                    android:text="意见反馈"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:paddingLeft="20dp"
                    android:gravity="right|center"
                    android:src="@mipmap/ic_more"
                    android:layout_alignParentRight="true"/>
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>

    <LinearLayout
        android:id="@+id/my_line_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/privacy_policy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:gravity="left|center"
                android:textColor="@color/color_1B1B1B"
                android:textSize="16sp"
                android:text="隐私政策"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:gravity="right|center"
                android:src="@mipmap/ic_more"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_line"/>
    <LinearLayout
        android:id="@+id/my_line_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/user_agreement"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:gravity="left|center"
                android:textColor="@color/color_1B1B1B"
                android:textSize="16sp"
                android:text="用户协议"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:paddingLeft="18sp"
                android:gravity="right|center"
                android:src="@mipmap/ic_more"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
        <LinearLayout
            android:id="@+id/my_line_clear"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/clean_up_cache"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left|center"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp"
                    android:text="清除缓存"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:paddingLeft="20dp"
                    android:gravity="right|center"
                    android:src="@mipmap/ic_more"
                    android:layout_alignParentRight="true"/>
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
    <LinearLayout
        android:id="@+id/my_line_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/color_FFFFFF">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/check_for_updates"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:gravity="left|center"
                android:textColor="@color/color_1B1B1B"
                android:textSize="16sp"
                android:text="版本更新"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:gravity="right|center"
                android:src="@mipmap/ic_more"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
    <LinearLayout
        android:id="@+id/my_line_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/contact_us"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:gravity="left|center"
                android:textColor="@color/color_1B1B1B"
                android:textSize="16sp"
                android:text="联系我们"/>
            <TextView
                android:id="@+id/about_contact_email"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:gravity="right|center"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="aaaaaaa@outlook.com"/>
        </FrameLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>

        <LinearLayout
            android:id="@+id/my_line_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/contact_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left|center"
                    android:text="联系QQ"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/about_contact_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:gravity="right|center"
                    android:textColor="#999999"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:text="12345678"/>
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>

        <LinearLayout
            android:id="@+id/my_line_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/tools"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left|center"
                    android:text="辅助工具"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:paddingLeft="20dp"
                    android:gravity="right|center"
                    android:src="@mipmap/ic_more"
                    android:layout_alignParentRight="true"/>
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
        <LinearLayout
            android:id="@+id/my_line_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/my_history"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left|center"
                    android:text="历史记录"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:paddingLeft="20dp"
                    android:gravity="right|center"
                    android:src="@mipmap/ic_more"
                    android:layout_alignParentRight="true"/>
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="left|center"
                    android:text="启用调试"
                    android:textColor="@color/color_1B1B1B"
                    android:textSize="16sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switcher_debug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:paddingLeft="20dp"
                    app:trackTint="#aaaaaa"
                    android:checked="false"
                    app:trackTintMode="multiply"
                    app:thumbTint="#F44336"
                    app:thumbTintMode="multiply" />
            </FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="当前版本： 1.0.0"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
