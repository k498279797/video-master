<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/class_item_container"
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="5dp"
        android:background="@drawable/shape_clm_item_bg"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <com.vxiaokang.video.component.JustifyTextView
            android:id="@+id/item_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#FF333333"
            android:textSize="13dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="看到很多童鞋不理解position,"
            />
        <com.vxiaokang.video.component.JustifyTextView
            android:id="@+id/item_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:textColor="#FF333333"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="看到很多童鞋不理解position,"
            />
        <com.vxiaokang.video.component.JustifyTextView
            android:id="@+id/item_link_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#FF333333"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="看到很多童鞋不理解position,"
            />

        <com.vxiaokang.video.component.JustifyTextView
            android:id="@+id/item_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#FF333333"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="看到很多童鞋不理解position,"
            />
        <LinearLayout
            android:id="@+id/item_copy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="right">
            <TextView
                android:id="@+id/item_copy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/shape_red_btn_5"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingTop="3dp"
                android:textSize="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:text="复制链接"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
