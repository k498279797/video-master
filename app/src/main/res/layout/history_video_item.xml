<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <LinearLayout
        android:id="@+id/class_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="83.33dp"
            android:background="@drawable/bg_white"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/class_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@mipmap/default_img"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="83.33dp"
            android:layout_gravity="left|center"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/class_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:lines="2"
                android:ellipsize="end"
                android:text="年终总结PPT怎么做？"/>
            <TextView
                android:id="@+id/class_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"
                android:text="2022-10-22 01:12:19"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/class_item_views"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:text="播放：2.0"/>
                <TextView
                    android:id="@+id/class_item_tags"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:text="正片"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView android:id="@+id/class_item_del"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/rec_ic_more"/>
    </LinearLayout>
</LinearLayout>
