<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_show_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:text="播放视频"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="输入网站"
            android:textColor="#333333"
            android:textSize="15dp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/website_url_txt"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback"
            android:gravity="start"
            android:hint="http://www...."
            android:padding="12dp"
            android:text="https://s.xlzys.com/play/rb283vze/index.m3u8"
            android:textColor="@color/color_1B1B1B"
            android:textColorHint="@color/color_4E4E4E"
            android:textSize="13.33dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/submit_clear_txt"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/shape_blue_btn"
                android:gravity="center"
                android:text="清空"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/submit_paste_txt"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/shape_orange_btn"
                android:gravity="center"
                android:text="粘贴"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/submit_open_txt"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/shape_feedback_btn"
                android:gravity="center"
                android:text="打开"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
