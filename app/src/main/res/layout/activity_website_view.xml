<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    <View
        android:id="@+id/my_topbar"
        android:layout_width="match_parent"
        android:background="#00ffffff"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/top_title_line"
        android:layout_width="wrap_content"
        android:layout_below="@+id/my_topbar"
        android:layout_height="38dp"
        android:background="#00ffffff"
        android:gravity="left|center_horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="80dp"
            android:layout_height="38dp"
            android:src="@mipmap/ic_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/web_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:visibility="gone"
            android:text=""
            android:textSize="20sp" />
    </RelativeLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/video_fullView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_title_line"
        android:orientation="vertical">
        <!--<me.dkzwm.widget.srl.SmoothRefreshLayout
            android:id="@+id/smoothRefreshLayout_test_scale_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:sr_mode="mode_scale"
            android:background="@color/color_D8D7D7">-->
        <WebView
            android:id="@+id/web_common_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <!--  </me.dkzwm.widget.srl.SmoothRefreshLayout>-->
    </FrameLayout>

</RelativeLayout>


