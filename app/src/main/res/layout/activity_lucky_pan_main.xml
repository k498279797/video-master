<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#F7F7F7"
tools:context=".activity.tool.SleepActivity">
<View
    android:id="@+id/my_topbar"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="0dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="left|center_horizontal">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="80dp"
        android:layout_height="38dp"
        android:src="@mipmap/ic_back"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_show_set_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#333333"
        android:text="抽奖"
        android:textSize="20sp" />
</RelativeLayout>

<FrameLayout
    android:id="@+id/activity_main"
    android:layout_marginTop="50dp"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center">
    <com.vxiaokang.video.activity.tool.luck.LuckyPanView
        android:id="@+id/surface_pan"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" />
    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/start"/>
</FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginTop="20dp" >
    <Button
        android:id="@+id/starBtn"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/shape_feedback_btn"
        android:text="开始"
        android:layout_weight="1" />
    <Button
        android:id="@+id/paseBtn"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/shape_feedback_btn"
        android:text="暂停"
        android:layout_weight="1" />
    <Button
        android:id="@+id/stopBtn"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/shape_feedback_btn"
        android:text="结束"
        android:layout_weight="1" />

</LinearLayout>
</LinearLayout>