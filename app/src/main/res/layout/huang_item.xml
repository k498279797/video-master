<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <LinearLayout
        android:id="@+id/class_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/class_item_top_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/page_bg_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/class_item_toptitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_table_left"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:text="分类"
                android:textSize="18dp"
                android:textColor="@color/page_text_color"/>
            <ImageView
                android:id="@+id/img_more_hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:gravity="right|center"
                android:src="@mipmap/more"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/class_item_main_container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_white"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/class_item_coverImage"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/banner"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/class_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="凉凉"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/class_item_times"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:text="时长：00:29:00"/>
                    <TextView
                        android:id="@+id/class_item_views"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:text="观看：55万"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_white">
                <ImageView
                    android:id="@+id/class_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/mv_play"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
